<div class="col-4">
  <div class="list-group" id="list-tab" role="tablist">
    <% Object.keys(localContacts).forEach((contactGroup, index) => { %>
      <% const contactGroupHtml = contactGroup.replace(/ /g, '-') %>
      <a class="list-group-item list-group-item-action <%= index === 0 ? 'active' : '' %>" id="list-<%= contactGroupHtml %>-list" data-toggle="list" href="#list-<%= contactGroupHtml %>" role="tab"><%= contactGroup %></a>
    <% }) %>
  </div>
</div>

<div class="col-8">
  <div class="tab-content" id="nav-tabContent">
    <% Object.keys(localContacts).forEach((contactGroup, index) => { %>
      <% const contactGroupHtml = contactGroup.replace(/ /g, '-') %>
      <div class="tab-pane fade <%= index === 0 ? 'show active' : '' %>" id="list-<%= contactGroupHtml %>" role="tabpanel">
        <ul class="list-group list-group-flush text-left">
          <% Object.keys(localContacts[contactGroup]).forEach(contactPair => { %>
            <li class="list-group-item">
              <span><%= contactPair %></span>
              <span class="float-right"><%= localContacts[contactGroup][contactPair] %></span>
            </li>
          <% }) %>
        </ul>
      </div>
    <% }) %>
  </div>
</div>
